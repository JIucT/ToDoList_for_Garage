<div class="text-center">
  <div class="page-header">
    <h2>Sign up</h2>  
  </div>
</div>
<%= devise_error_messages! %>
<div class="form_wrap center">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <div class="form-group"><%= f.label :email, :class => "control-label" %><br />
    <%= f.email_field :email, :autofocus => true, :class => "form-control", :id => "inputEmail", :type => "email" %></div>

    <div class="form-group"><%= f.label :password, :class => "control-label" %><br />
    <%= f.password_field :password, :class => "form-control", :type => "password" %></div>

    <div class="form-group"><%= f.label :password_confirmation, :class => "control-label" %><br />
    <%= f.password_field :password_confirmation, :class => "form-control", :type => "password" %></div>

    <div class="form-group center text-center" > <%= f.submit "Sign up", :type => "submit", :class => "btn btn-primary" %>
     <%= render "devise/shared/links" %> </div>
  <% end %>
</div>

