<div class="text-center">
  <div class="page-header">
    <h2>Sign in</h2>
  </div>
</div>
<div class="form_wrap center">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group"><%= f.label :email, :class => "control-label" %><br />
  <%= f.email_field :email, :autofocus => true, :class => "form-control", :type => "email" %></div>

  <div class="form-group"><%= f.label :password, :class => "control-label" %><br />
  <%= f.password_field :password, :class => "form-control", :type => "password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "control-label" %></div>
  <% end -%>

  <div class="form-group text-center"><%= f.submit "Sign in", :type => "submit", :class => "btn btn-primary"%>
  <%= render "devise/shared/links" %></div>
<% end %>
</div>
